<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Công ty TNHH DV Thể thao Phạm Kha</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />    
    <link rel="stylesheet" href="~/css/all.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
   
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3  fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"> 
                    <img src="~/imgs/logo.png" alt="Avatar Logo" style="width:40px;"> 
                    </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">                       
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="admin" asp-controller="Products" asp-action="Index">Sản Phẩm</a>
                        </li>                       
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="admin" asp-controller="Categories" asp-action="Index">Danh mục</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="admin" asp-controller="Roles" asp-action="Index">Quyền</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="admin" asp-controller="Users" asp-action="Index">Người dùng</a>
                        </li>
                       
                    </ul>
                    <ul id="welcome" class="navbar-nav d-sm-inline-flex justify-content-between">
                        <li class="nav-item">
                            <p>Welcome</p>
                        </li>
                    </ul>
                </div>
               
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Dev
            @if (Context.User != null && Context.User.Claims.Any(x => x.Value.ToLower().Equals("admin")))
            {
                <a href="/admin">Admin-Site</a>
            }
        </div>
    </footer>
    
    
   
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
