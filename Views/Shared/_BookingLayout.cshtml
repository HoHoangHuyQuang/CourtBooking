<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Công ty TNHH DV Thể thao Phạm Kha</title>
    <link rel="icon" type="image/png" href="~/favicon.ico" sizes="16x16">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/lib/fontawesome/dist/css/font-awesome.min.css">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/lib/animate/animate.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/booking.css">
    <link rel="stylesheet" href="~/css/style.css">

    <link href='https://fonts.googleapis.com/css?family=Montserrat:400,700|Source+Sans+Pro:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
</head>
<body>
    <div id="wrapper">
        <header id="header">
            <div class="container">
                <div class="logo"><a asp-action="Index" asp-controller="Home"><img src="~/imgs/logo.png" alt="logo" height="80" width="150"></a></div>
                <div class="container-fluid bg-dark mb-30">
                    <div class="row px-xl-5">

                        <div class="col-lg-12">
                            <nav class="navbar navbar-expand-lg bg-dark navbar-dark py-3 py-lg-0 px-0">
                                <a href="" class="text-decoration-none d-block d-lg-none">
                                    <span class="h1 text-uppercase text-dark bg-light px-2">PhamKha</span>
                                    <span class="h1 text-uppercase text-light bg-primary px-2 ml-n1">Badminton</span>
                                </a>
                                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                                    <span class="navbar-toggler-icon"></span>
                                </button>

                                <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                                    <div class="navbar-nav ml-auto py-0" style="float: right;">
                                        <a class="nav-link" asp-action="Index" asp asp-controller="Home">Trang chủ</a>
                                        <a class="nav-link" asp-action="ProductView" asp-controller="Home">Sản phẩm</a>
                                        @*  <a class="nav-link" asp-action="Index" asp asp-controller="Home">Khóa học</a> *@
                                        @if (Context.User != null && Context.User.Claims.Any(x => new List<string> { "admin", "superuser" }.Contains(x.Value.ToLower())))
                                        {
                                            <li><a href="/admin">Admin-Site</a></li>
                                        }
                                    </div>
                                </div>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        @RenderBody()
        <a href="#" class="btn btn-primary back-to-top" style="display: inline;"><i class="fa fa-angle-double-up"></i></a>

        <footer id="footer">
            <div class="container">
                <div class="footer-holder">
                    <div class="row">
                        <div class="col-md-6">
                            <h3>Địa chỉ sân tập</h3>
                            <p>
                                Đ. Phạm Hùng, Bình Hưng, Bình Chánh, Thành phố Hồ Chí Minh
                            </p>
                            &copy; 2024 - Dev

                        </div>

                        <div class="col-md-6 text-right">
                            <ul class="social">
                                <li><a href="https://www.facebook.com/people/S%C3%A2n-c%E1%BA%A7u-l%C3%B4ng-Ph%E1%BA%A1m-Kha/61550205595997/"><i class="fa fa-facebook-f"></i></a></li>
                                <li><a href="@string.Join("", @"https://www.youtube.com/@phamkha6391")"> <i class="fa fa-youtube" style="color: #ec2222;"></i> </a></li>
                                <li><a href="javascript:"><i><img src="~/imgs/zalo.png" height="30" s /></i> </a></li>

                            </ul>
                        </div>
                    </div>
                </div>
            </div>

        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.main.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
